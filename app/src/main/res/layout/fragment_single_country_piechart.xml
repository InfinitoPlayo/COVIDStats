<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_background"
    android:backgroundTint="#F2F7FC"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:targetApi="lollipop">

    <com.github.mikephil.charting.charts.PieChart
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:id="@+id/pchSingleCountry"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="50sp"/>

    <Button
        android:id="@+id/butAddFavorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_baseline_star_yellow_24"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/tviDateCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="5dp"
        android:text="Last updated: DATE"/>

    <TextView
        android:id="@+id/tviTotalConfirmedCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20dp"
        android:text="Total confirmed cases: 6754491"/>

    <TextView
        android:id="@+id/tviTotalDeathsCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10dp"
        android:text="Total deaths: 935744" />

    <TextView
        android:id="@+id/tviTotalRecoveredCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10dp"
        android:text="Total recovered: 4325543" />

    <TextView
        android:id="@+id/tviTotalActiveCasesCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10dp"
        android:text="Total active cases: 628964" />

</LinearLayout>