<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountriesRankActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbaFavoriteCountries"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        app:title="COVID Stats"
        app:navigationIcon="@drawable/covidstats_24"
        app:titleTextColor="@color/lightgrey"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="20sp"
        android:text="@string/favorite_countries"
        android:textSize="25sp"
        android:textColor="#505050"
        android:textStyle="bold"/>

    <FrameLayout
        android:id="@+id/flaFavoriteCountries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvFavoriteCountries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/lightgrey"
        app:itemTextColor="@color/lightgrey"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu" />

</LinearLayout>