<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_background"
    android:backgroundTint="@color/lightblue"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:targetApi="lollipop">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pchGlobalData"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="50sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/historical_data"
        android:textSize="20sp"
        android:textColor="#333333"
        android:gravity="center"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_cardview">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_cardview_red_2"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/total_confirmed_cases_"
                android:textColor="@color/lightgrey"
                android:textColorHighlight="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tviConfirmedGlobal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_156234858"
                android:layout_gravity="center"
                android:textColor="@color/lightgrey"
                android:textColorHighlight="@color/white"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8"
                android:shadowColor="@color/black"
                android:shadowRadius="8" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_cardview">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_cardview_red_2"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/total_active_cases_"
                android:textColor="@color/lightgrey"
                android:textColorHighlight="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tviActiveCasesGlobal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowRadius="8"
                android:text="@string/_156234858"
                android:textAlignment="center"
                android:textColor="@color/lightgrey"
                android:textColorHighlight="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.733" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/blue_500"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/total_deaths_"
                    android:textColor="@color/lightgrey"
                    android:textColorHighlight="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/background_cardview_red_2"/>

                <TextView
                    android:id="@+id/tviTotalDeathsGlobal"
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:text="@string/_156234858"
                    android:textAlignment="center"
                    android:textColor="@color/lightgrey"
                    android:textColorHighlight="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:shadowColor="@color/black"
                    android:shadowRadius="8"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/blue_500"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingStart="7dp"
                    android:paddingLeft="7dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/total_recovered_"
                    android:textColor="@color/lightgrey"
                    android:textColorHighlight="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/background_cardview_red_2"/>

                <TextView
                    android:id="@+id/tviRecoveredGlobal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="@string/_156234858"
                    android:textAlignment="center"
                    android:textColor="@color/lightgrey"
                    android:textColorHighlight="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:shadowColor="@color/black"
                    android:shadowRadius="8"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/last_report_data"
        android:textSize="20sp"
        android:textColor="#333333"
        android:gravity="center"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_cardview">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_cardview_red_2"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/new_confirmed_cases_"
                android:textColor="@color/lightgrey"
                android:textColorHighlight="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tviNewCasesGlobal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_156234858"
                android:layout_gravity="center"
                android:textColor="@color/lightgrey"
                android:textColorHighlight="@color/white"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8"
                android:shadowColor="@color/black"
                android:shadowRadius="8" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_cardview">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_cardview_red_2"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/new_active_cases_"
                android:textColor="@color/lightgrey"
                android:textColorHighlight="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tviNewActiveCasesGlobal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowRadius="8"
                android:text="@string/_156234858"
                android:textAlignment="center"
                android:textColor="@color/lightgrey"
                android:textColorHighlight="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.733" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/blue_500"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/new_deaths_"
                    android:textColor="@color/lightgrey"
                    android:textColorHighlight="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/background_cardview_red_2"/>

                <TextView
                    android:id="@+id/tviNewDeathsGlobal"
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:text="@string/_156234858"
                    android:textAlignment="center"
                    android:textColor="@color/lightgrey"
                    android:textColorHighlight="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:shadowColor="@color/black"
                    android:shadowRadius="8"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/blue_500"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingStart="7dp"
                    android:paddingLeft="7dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/new_recovered_"
                    android:textColor="@color/lightgrey"
                    android:textColorHighlight="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/background_cardview_red_2"/>

                <TextView
                    android:id="@+id/tviNewRecoveredGlobal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="@string/_156234858"
                    android:textAlignment="center"
                    android:textColor="@color/lightgrey"
                    android:textColorHighlight="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:shadowColor="@color/black"
                    android:shadowRadius="8"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/tviDateGlobal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10dp"
        android:text="@string/last_updated"
        android:layout_gravity="center"/>

</LinearLayout>